<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" parallel="false">
<listeners>
    <listener class-name="utils.Listeners"/>
</listeners>
    <test verbose="2" preserve-order="true" name="Emulator">
        <classes>
            <class name="tests.LoginTest">
                <methods>
                    <include name="login_with_valid_credentials"/>
                    <exclude name="login_with_invalid_username"/>
                    <exclude name="login_with_invalid_password"/>
                </methods>
            </class>
            <class name="tests.ProductTest">
                <methods>
                    <exclude name="validate_product_on_home_page"/>
                    <exclude name="validate_product_on_product_page"/>
                    <include name="order_product"/>
                </methods>
            </class>
            <class name="tests.CartTest">
                <methods>
                    <exclude name="check_product_details"/>
                </methods>
            </class>
        </classes>
    </test>

